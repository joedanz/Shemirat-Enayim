---
import Layout from '~/layouts/PageLayout.astro';
import type { MetaData } from '~/types';

export interface Props {
  metadata: MetaData;
  difficulty?: 'beginner' | 'intermediate' | 'advanced';
  timeEstimate?: string;
  prerequisites?: string[];
}

const { metadata, difficulty = 'beginner', timeEstimate, prerequisites = [] } = Astro.props;

const difficultyLabels = {
  beginner: 'Beginner',
  intermediate: 'Intermediate',
  advanced: 'Advanced',
};

const difficultyClasses = {
  beginner: 'bg-green-100 text-green-800',
  intermediate: 'bg-yellow-100 text-yellow-800',
  advanced: 'bg-red-100 text-red-800',
};
---

<Layout metadata={metadata}>
  <!-- Breadcrumb Navigation -->
  <nav class="max-w-6xl mx-auto px-4 py-4 text-sm" aria-label="Breadcrumb">
    <ol class="flex flex-wrap items-center gap-2 list-none">
      <slot name="breadcrumb" />
    </ol>
  </nav>

  <!-- Guide Container -->
  <article class="max-w-4xl mx-auto px-4 py-8">
    <!-- Guide Header -->
    <header class="mb-8 pb-6 border-b-2 border-gray-200 dark:border-gray-700">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {metadata.title}
      </h1>

      <!-- Meta Information -->
      <div class="flex flex-wrap items-center gap-3 mb-4">
        <span class={`inline-flex items-center px-3 py-1 text-sm font-semibold rounded-full uppercase tracking-wide ${difficultyClasses[difficulty]}`}>
          {difficultyLabels[difficulty]}
        </span>
        {timeEstimate && (
          <span class="inline-flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
            <svg
              width="16"
              height="16"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="8" cy="8" r="7"></circle>
              <polyline points="8 4 8 8 10 10"></polyline>
            </svg>
            {timeEstimate}
          </span>
        )}
      </div>

      <!-- Description -->
      {metadata.description && (
        <p class="text-xl text-gray-700 dark:text-gray-300 font-medium leading-relaxed mb-6">
          {metadata.description}
        </p>
      )}

      <!-- Prerequisites -->
      {prerequisites.length > 0 && (
        <div class="bg-blue-50 dark:bg-blue-900/50 border-l-4 border-blue-400 dark:border-blue-500 p-4 rounded">
          <p class="font-semibold text-blue-800 dark:text-blue-100 mb-2">Prerequisites:</p>
          <ul class="space-y-1 text-blue-700 dark:text-blue-200">
            {prerequisites.map((prereq) => (
              <li class="flex items-start gap-2">
                <span class="mt-1">â€¢</span>
                <span>{prereq}</span>
              </li>
            ))}
          </ul>
        </div>
      )}
    </header>

    <!-- Guide Content -->
    <div class="prose prose-lg dark:prose-invert max-w-none
      prose-headings:font-bold
      prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-4 prose-h2:pt-4 prose-h2:border-t prose-h2:border-gray-200 dark:prose-h2:border-gray-700
      prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-3 prose-h3:text-blue-600 dark:prose-h3:text-blue-400
      prose-p:text-gray-700 dark:prose-p:text-gray-300 prose-p:leading-relaxed
      prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-a:no-underline hover:prose-a:underline
      prose-strong:text-gray-900 dark:prose-strong:text-white
      prose-ul:space-y-2
      prose-li:text-gray-700 dark:prose-li:text-gray-300
      prose-img:rounded-lg prose-img:shadow-lg prose-img:border prose-img:border-gray-200 dark:prose-img:border-gray-700
      prose-code:text-sm prose-code:bg-gray-100 dark:prose-code:bg-gray-800 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-gray-800 dark:prose-code:text-gray-200 prose-code:before:content-none prose-code:after:content-none
      prose-pre:bg-gray-900 dark:prose-pre:bg-gray-950 prose-pre:text-gray-100
      prose-table:w-full prose-table:border-collapse
      prose-th:bg-blue-600 prose-th:text-white prose-th:p-3 prose-th:text-left prose-th:text-sm prose-th:font-semibold prose-th:uppercase prose-th:tracking-wider
      prose-td:p-3 prose-td:border-b prose-td:border-gray-200 dark:prose-td:border-gray-700
      prose-tr:hover:bg-gray-50 dark:prose-tr:hover:bg-gray-800/50"
    >
      <slot />
    </div>

    <!-- Footer / Next Steps -->
    {Astro.slots.has('footer') && (
      <footer class="mt-12 pt-8 border-t-2 border-gray-200 dark:border-gray-700">
        <slot name="footer" />
      </footer>
    )}
  </article>

  <!-- Custom styles for ordered lists with step numbers -->
  <style is:global>
    .prose ol {
      counter-reset: step-counter;
      list-style: none;
      padding-left: 0;
    }

    .prose ol > li {
      counter-increment: step-counter;
      position: relative;
      padding-left: 2.5rem;
      margin-bottom: 1.5rem;
    }

    .prose ol > li::before {
      content: counter(step-counter);
      position: absolute;
      left: 0;
      top: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 2rem;
      height: 2rem;
      background-color: #2563eb;
      color: white;
      border-radius: 9999px;
      font-weight: 700;
      font-size: 0.875rem;
    }

    /* Alert/Note styles for guide content */
    .prose .alert {
      padding: 1rem;
      border-radius: 0.5rem;
      margin: 1.5rem 0;
      border-left-width: 4px;
    }

    .prose .alert-success {
      background-color: rgb(240 253 244);
      border-left-color: rgb(34 197 94);
      color: rgb(21 128 61);
    }

    .prose .alert-info {
      background-color: rgb(239 246 255);
      border-left-color: rgb(59 130 246);
      color: rgb(30 64 175);
    }

    .prose .alert-warning {
      background-color: rgb(254 252 232);
      border-left-color: rgb(234 179 8);
      color: rgb(133 77 14);
    }

    .prose .alert-error {
      background-color: rgb(254 242 242);
      border-left-color: rgb(239 68 68);
      color: rgb(127 29 29);
    }

    .dark .prose .alert-success {
      background-color: rgb(20 83 45 / 0.3);
      border-left-color: rgb(34 197 94);
      color: rgb(134 239 172);
    }

    .dark .prose .alert-info {
      background-color: rgb(30 58 138 / 0.3);
      border-left-color: rgb(59 130 246);
      color: rgb(147 197 253);
    }

    .dark .prose .alert-warning {
      background-color: rgb(113 63 18 / 0.3);
      border-left-color: rgb(234 179 8);
      color: rgb(253 224 71);
    }

    .dark .prose .alert-error {
      background-color: rgb(127 29 29 / 0.3);
      border-left-color: rgb(239 68 68);
      color: rgb(252 165 165);
    }
  </style>
</Layout>
