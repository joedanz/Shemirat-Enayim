---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Shemirat Einayim â€” Protection for the Eyes',
  description:
    'Comprehensive resources for internet safety and content filtering. Access guides, tools, and resources to implement effective protection for your family and community.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#get-started',
      },
      { text: 'View All Methods', href: '/methods' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Shemirat Einayim</span>
      <br />
      Protection for the Eyes
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline"> Comprehensive resources for internet safety and content filtering. </span>
      Access guides, tools, and resources to implement effective protection measures for your home, school, or community.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->
  <Stats
    stats={[
      { title: 'Protection Methods', amount: '25+' },
      { title: 'Free Resources', amount: '100%' },
      { title: 'Audience Types', amount: '3' },
      { title: 'Available Guidance', amount: '24/7' },
    ]}
  />

  <!-- Features Widget *************** -->
  <Features
    id="get-started"
    tagline="Choose Your Path"
    title="Who are you protecting?"
    subtitle="Find the right guidance for your situation"
    items={[
      {
        title: 'For Parents',
        description:
          'Learn how to protect your children online with age-appropriate filters, device controls, and family safety strategies.',
        icon: 'tabler:users',
        callToAction: {
          text: 'Parents Guide',
          href: '/parents',
        },
      },
      {
        title: 'For Organizations',
        description:
          'Set up filtered networks for your community, manage public access, and support families in their digital safety journey.',
        icon: 'tabler:building',
        callToAction: {
          text: 'Organizations Guide',
          href: '/leaders',
        },
      },
      {
        title: 'For Individuals',
        description:
          'Take control of your digital environment with personal filtering solutions and accountability tools.',
        icon: 'tabler:shield',
        callToAction: {
          text: 'Individuals Guide',
          href: '/individuals',
        },
      },
    ]}
  />

  <!-- Features Widget *************** -->
  <Features
    tagline="Protection Methods"
    title="Comprehensive Filtering Solutions"
    subtitle="Multiple layers of protection for every device and network"
    items={[
      {
        title: 'DNS Filtering',
        description:
          'Network-level protection that filters content before it reaches your devices. Easy to set up and works on all devices.',
        icon: 'tabler:network',
        callToAction: {
          text: 'Learn More',
          href: '/guides/dns-filtering',
        },
      },
      {
        title: 'Device Controls',
        description:
          'Built-in parental controls and screen time management for iOS, Android, Windows, and macOS devices.',
        icon: 'tabler:device-tablet',
        callToAction: {
          text: 'View Guides',
          href: '/methods#devices',
        },
      },
      {
        title: 'Software Solutions',
        description:
          'Specialized filtering software, browser extensions, and accountability applications for comprehensive protection.',
        icon: 'tabler:apps',
        callToAction: {
          text: 'Explore Software',
          href: '/methods#software',
        },
      },
      {
        title: 'Router Configuration',
        description:
          'Configure your home router to provide network-wide filtering and create guest networks for visitors.',
        icon: 'tabler:router',
        callToAction: {
          text: 'Router Guide',
          href: '/guides/router-config',
        },
      },
      {
        title: 'Browser Extensions',
        description:
          'Add extra layers of protection with browser-based filtering extensions for Chrome, Firefox, and Safari.',
        icon: 'tabler:browser',
        callToAction: {
          text: 'View Extensions',
          href: '/guides/browser-extensions',
        },
      },
      {
        title: 'Accountability Apps',
        description:
          'Monitor and report internet usage with accountability software that promotes transparency and support.',
        icon: 'tabler:eye-check',
        callToAction: {
          text: 'Accountability Tools',
          href: '/guides/accountability-apps',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features>

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'View All Methods',
        href: '/methods',
      },
      {
        variant: 'secondary',
        text: 'Explore Resources',
        href: '/resources',
      },
    ]}
  >
    <Fragment slot="title"> Ready to Get Started? </Fragment>

    <Fragment slot="subtitle">
      Browse our comprehensive guides and find the right solution for your needs. <br class="hidden md:inline" />
      All resources are free and regularly updated.
    </Fragment>
  </CallToAction>
</Layout>
