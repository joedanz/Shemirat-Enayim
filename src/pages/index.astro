---
/**
 * Homepage - Shemirat Enayim
 * Main landing page with hero, stats, audience cards, and CTA
 */

import Layout from '../layouts/Layout.astro';
import Header from '../components/shemirat/Header.astro';
import Footer from '../components/shemirat/Footer.astro';
import Hero from '../components/shemirat/Hero.astro';
import Card from '../components/shemirat/Card.astro';
import Button from '../components/shemirat/Button.astro';
import Stats from '../components/shemirat/Stats.astro';

const currentPath = Astro.url.pathname;

const stats = [
	{ value: '25+', label: 'Protection Methods', icon: 'üõ°Ô∏è' },
	{ value: '100%', label: 'Free Resources', icon: 'üìö' },
	{ value: '3', label: 'Audience Types', icon: 'üë•' },
	{ value: '24/7', label: 'Available Guidance', icon: '‚è∞' }
];
---

<Layout
	title="Shemirat Enayim - Protection for the Eyes"
	description="Comprehensive resources for parents, religious leaders, and individuals to protect their networks from inappropriate content through content filtering and internet safety solutions."
	pageType="home"
>
	<Header currentPath={currentPath} />

	<Hero
		title="Shemirat Enayim"
		subtitle="Protection for the Eyes - Comprehensive resources for internet safety and content filtering"
		ctaText="Get Started"
		ctaHref="#get-started"
	/>

	<main class="flex-1">
		<!-- Intro Section -->
		<section class="py-16 bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center max-w-3xl mx-auto">
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-50 mb-6">
						Protect Your Family and Community
					</h2>
					<p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
						Access comprehensive guides, tools, and resources to implement effective content filtering
						and internet safety measures for your home, school, or community.
					</p>
				</div>
			</div>
		</section>

		<!-- Stats Section -->
		<Stats stats={stats} />

		<!-- Choose Your Path Section -->
		<section id="get-started" class="py-16 bg-gray-50 dark:bg-gray-800">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 dark:text-gray-50 mb-12">
					Choose Your Path
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
					<Card
						title="For Parents"
						description="Learn how to protect your children online with age-appropriate filters, device controls, and family safety strategies."
						href="/parents"
						icon="users"
					/>
					<Card
						title="For Organizations"
						description="Set up filtered networks for your community, manage public access, and support families in their digital safety journey."
						href="/leaders"
						icon="building"
					/>
					<Card
						title="For Individuals"
						description="Take control of your digital environment with personal filtering solutions and accountability tools."
						href="/individuals"
						icon="shield"
					/>
				</div>
			</div>
		</section>

		<!-- Protection Methods Section -->
		<section class="py-16 bg-white dark:bg-gray-900">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 dark:text-gray-50 mb-12">
					Protection Methods
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
					<Card
						title="DNS Filtering"
						description="Network-level protection that filters content before it reaches your devices."
						href="/methods"
						icon="network"
					/>
					<Card
						title="Device Controls"
						description="Built-in parental controls and screen time management for all your devices."
						href="/methods"
						icon="device-mobile"
					/>
					<Card
						title="Software Solutions"
						description="Specialized filtering software and accountability applications."
						href="/methods"
						icon="adjustments"
					/>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-16 bg-gradient-to-br from-brand-600 to-brand-700 dark:from-brand-900 dark:to-brand-800 text-white">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center max-w-3xl mx-auto">
					<h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
						Ready to Get Started?
					</h2>
					<p class="text-xl text-brand-100 dark:text-brand-200 mb-8">
						Browse our comprehensive guides and find the right solution for your needs.
					</p>
					<div class="flex gap-4 justify-center flex-wrap">
						<Button href="/methods" size="lg" variant="secondary">
							View All Methods
						</Button>
						<Button href="/resources" variant="outline" size="lg" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-brand-600">
							Explore Resources
						</Button>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
