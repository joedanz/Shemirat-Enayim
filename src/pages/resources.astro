---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
import Alert from '../components/Alert.astro';

const currentPath = Astro.url.pathname;
---

<Layout
	title="Resources - Shemirat Enayim"
	description="Comprehensive library of guides, tools, and resources for internet safety and content filtering."
>
	<Header currentPath={currentPath} />

	<Hero
		title="Resource Library"
		subtitle="Guides, tools, and references to support your internet safety journey"
		align="center"
	/>

	<main class="resources-main">
		<div class="container">
			<!-- Search Placeholder -->
			<section class="search-section">
				<div class="search-box">
					<input
						type="search"
						placeholder="Search resources... (coming soon)"
						class="search-input"
						disabled
					/>
					<button class="search-button" disabled>Search</button>
				</div>
			</section>

			<!-- Quick Links -->
			<section class="quick-links-section">
				<h2>Quick Access</h2>
				<div class="quick-links-grid">
					<a href="#guides" class="quick-link-card">
						<span class="quick-link-icon">üìö</span>
						<span class="quick-link-title">Guides</span>
					</a>
					<a href="#tools" class="quick-link-card">
						<span class="quick-link-icon">üõ†Ô∏è</span>
						<span class="quick-link-title">Recommended Tools</span>
					</a>
					<a href="#glossary" class="quick-link-card">
						<span class="quick-link-icon">üìñ</span>
						<span class="quick-link-title">Glossary</span>
					</a>
					<a href="#external" class="quick-link-card">
						<span class="quick-link-icon">üîó</span>
						<span class="quick-link-title">External Resources</span>
					</a>
				</div>
			</section>

			<!-- Setup Guides -->
			<section id="guides" class="resource-section">
				<h2>üìö Setup Guides & Tutorials</h2>
				<p class="section-intro">
					Step-by-step instructions for implementing various protection methods.
				</p>

				<div class="resource-grid">
					<Card
						title="Getting Started for Parents"
						description="Complete beginner's guide to protecting your family online with practical first steps."
						href="/guides/getting-started-parents"
					/>
					<Card
						title="DNS Filtering Setup"
						description="Configure DNS filtering on your router or devices for network-wide protection."
						href="/guides/dns-filtering"
					/>
					<Card
						title="iPhone Screen Time Guide"
						description="Complete walkthrough of Apple's Screen Time features for parental controls."
						href="/guides/ios-screen-time"
					/>
					<Card
						title="Android Family Link Setup"
						description="Set up Google Family Link for comprehensive Android parental controls."
						href="/guides/android-family-link"
					/>
					<Card
						title="Router Configuration"
						description="Configure your home router for filtering, schedules, and device management."
						href="/guides/router-config"
					/>
					<Card
						title="Community WiFi Setup"
						description="Implement filtered public WiFi for religious communities and institutions."
						href="/guides/community-wifi"
					/>
				</div>

				<Alert type="info">
					<strong>Note:</strong> Detailed guides are currently being developed. Check back soon or
					<a href="/contact">contact us</a> if you need specific guidance right away.
				</Alert>
			</section>

			<!-- Recommended Tools -->
			<section id="tools" class="resource-section">
				<h2>üõ†Ô∏è Recommended Tools & Services</h2>
				<p class="section-intro">
					Vetted solutions organized by category and use case.
				</p>

				<div class="tools-category">
					<h3>DNS Filtering Services</h3>
					<div class="tools-list">
						<div class="tool-item">
							<h4>OpenDNS Family Shield</h4>
							<p><strong>Cost:</strong> Free | <strong>Type:</strong> DNS Filtering</p>
							<p>Easy-to-configure DNS service with pre-set family filtering. No registration required.</p>
							<a href="https://www.opendns.com/setupguide/" target="_blank" rel="noopener">Setup Guide ‚Üí</a>
						</div>
						<div class="tool-item">
							<h4>CleanBrowsing</h4>
							<p><strong>Cost:</strong> Free - $5/month | <strong>Type:</strong> DNS Filtering</p>
							<p>Multiple filtering levels available. Free tier includes strong filtering.</p>
							<a href="https://cleanbrowsing.org" target="_blank" rel="noopener">Learn More ‚Üí</a>
						</div>
						<div class="tool-item">
							<h4>NextDNS</h4>
							<p><strong>Cost:</strong> Free (limited) - $2/month | <strong>Type:</strong> DNS Filtering</p>
							<p>Highly customizable with detailed analytics and multiple device profiles.</p>
							<a href="https://nextdns.io" target="_blank" rel="noopener">Learn More ‚Üí</a>
						</div>
					</div>
				</div>

				<div class="tools-category">
					<h3>Comprehensive Filtering Software</h3>
					<div class="tools-list">
						<div class="tool-item">
							<h4>Qustodio</h4>
							<p><strong>Cost:</strong> $55-138/year | <strong>Devices:</strong> Windows, Mac, iOS, Android, Kindle</p>
							<p>User-friendly multi-device filtering with time management and activity monitoring.</p>
							<a href="https://www.qustodio.com" target="_blank" rel="noopener">Learn More ‚Üí</a>
						</div>
						<div class="tool-item">
							<h4>Net Nanny</h4>
							<p><strong>Cost:</strong> $40-90/year | <strong>Devices:</strong> Windows, Mac, iOS, Android</p>
							<p>Real-time content filtering with profanity masking and screen time management.</p>
							<a href="https://www.netnanny.com" target="_blank" rel="noopener">Learn More ‚Üí</a>
						</div>
						<div class="tool-item">
							<h4>Bark</h4>
							<p><strong>Cost:</strong> $5-14/month | <strong>Focus:</strong> Monitoring & Alerts</p>
							<p>AI-powered monitoring for social media, texts, emails. Alerts on concerning content.</p>
							<a href="https://www.bark.us" target="_blank" rel="noopener">Learn More ‚Üí</a>
						</div>
					</div>
				</div>

				<div class="tools-category">
					<h3>Accountability Software</h3>
					<div class="tools-list">
						<div class="tool-item">
							<h4>Covenant Eyes</h4>
							<p><strong>Cost:</strong> $16-18/month | <strong>Focus:</strong> Accountability + Filtering</p>
							<p>Screen accountability with AI detection, plus filtering. Popular for individuals and families.</p>
							<a href="https://www.covenanteyes.com" target="_blank" rel="noopener">Learn More ‚Üí</a>
						</div>
						<div class="tool-item">
							<h4>Accountable2You</h4>
							<p><strong>Cost:</strong> $5-10/month | <strong>Focus:</strong> Accountability + Monitoring</p>
							<p>Comprehensive activity monitoring and reporting. More affordable alternative.</p>
							<a href="https://www.accountable2you.com" target="_blank" rel="noopener">Learn More ‚Üí</a>
						</div>
						<div class="tool-item">
							<h4>Truple</h4>
							<p><strong>Cost:</strong> $9/month | <strong>Focus:</strong> Accountability Only</p>
							<p>Simple accountability reporting without filtering. Browser-based solution.</p>
							<a href="https://www.truple.io" target="_blank" rel="noopener">Learn More ‚Üí</a>
						</div>
					</div>
				</div>

				<div class="disclaimer">
					<strong>Disclaimer:</strong> We are not affiliated with any of these services. Recommendations
					are based on features, reviews, and community feedback. Always research options before purchasing.
				</div>
			</section>

			<!-- Glossary -->
			<section id="glossary" class="resource-section">
				<h2>üìñ Glossary of Terms</h2>
				<p class="section-intro">
					Common internet safety and filtering terminology explained.
				</p>

				<div class="glossary-list">
					<div class="glossary-item">
						<h4>DNS (Domain Name System)</h4>
						<p>
							The "phone book" of the internet that translates website names (like google.com) into
							IP addresses. DNS filtering blocks access to inappropriate sites at this level.
						</p>
					</div>
					<div class="glossary-item">
						<h4>Content Filtering</h4>
						<p>
							Technology that analyzes and blocks access to websites or content based on categories,
							keywords, or other criteria.
						</p>
					</div>
					<div class="glossary-item">
						<h4>Parental Controls</h4>
						<p>
							Built-in features on devices and platforms that allow parents to restrict content,
							limit screen time, and monitor usage.
						</p>
					</div>
					<div class="glossary-item">
						<h4>Accountability Software</h4>
						<p>
							Applications that monitor internet activity and send reports to a trusted accountability
							partner, creating transparency rather than blocking.
						</p>
					</div>
					<div class="glossary-item">
						<h4>Whitelist / Allowlist</h4>
						<p>
							A filtering approach that only allows access to pre-approved websites. More restrictive
							but very secure.
						</p>
					</div>
					<div class="glossary-item">
						<h4>Blacklist / Blocklist</h4>
						<p>
							A filtering approach that blocks specific websites or categories while allowing
							everything else. Less restrictive but requires good filtering technology.
						</p>
					</div>
					<div class="glossary-item">
						<h4>Screen Time</h4>
						<p>
							Features that track and limit the amount of time spent on devices or specific apps.
							Available on iOS, Android, Windows, and macOS.
						</p>
					</div>
					<div class="glossary-item">
						<h4>SafeSearch</h4>
						<p>
							A feature in search engines (Google, Bing, etc.) that filters explicit content from
							search results.
						</p>
					</div>
					<div class="glossary-item">
						<h4>VPN (Virtual Private Network)</h4>
						<p>
							Technology that can route internet traffic through different servers, potentially
							bypassing filtering. Some filtering solutions can detect and block VPNs.
						</p>
					</div>
					<div class="glossary-item">
						<h4>Router</h4>
						<p>
							The device that connects your home network to the internet. Configuring filtering
							at the router level protects all connected devices.
						</p>
					</div>
				</div>
			</section>

			<!-- External Resources -->
			<section id="external" class="resource-section">
				<h2>üîó External Resources</h2>
				<p class="section-intro">
					Additional organizations and resources for internet safety education.
				</p>

				<div class="external-grid">
					<div class="external-card">
						<h4>Common Sense Media</h4>
						<p>Age-based ratings and reviews for movies, games, apps, TV shows, and websites.</p>
						<a href="https://www.commonsensemedia.org" target="_blank" rel="noopener">Visit Site ‚Üí</a>
					</div>
					<div class="external-card">
						<h4>NetSmartz</h4>
						<p>Internet safety education resources from the National Center for Missing & Exploited Children.</p>
						<a href="https://www.missingkids.org/netsmartz" target="_blank" rel="noopener">Visit Site ‚Üí</a>
					</div>
					<div class="external-card">
						<h4>Internet Matters</h4>
						<p>UK-based organization providing online safety guidance for parents.</p>
						<a href="https://www.internetmatters.org" target="_blank" rel="noopener">Visit Site ‚Üí</a>
					</div>
					<div class="external-card">
						<h4>ConnectSafely</h4>
						<p>Research-based safety tips and advice for families navigating social media and technology.</p>
						<a href="https://www.connectsafely.org" target="_blank" rel="noopener">Visit Site ‚Üí</a>
					</div>
				</div>
			</section>

			<!-- Downloadable Resources -->
			<section class="downloads-section">
				<h2>üì• Downloadable Resources</h2>
				<p class="section-intro">
					Print-friendly guides and quick-reference materials.
				</p>

				<Alert type="warning">
					<strong>Coming Soon:</strong> Downloadable PDF guides, quick-reference cards, and printable
					checklists are currently in development.
				</Alert>

				<div class="downloads-preview">
					<ul>
						<li>Quick Setup Checklist (PDF)</li>
						<li>DNS Settings Reference Card</li>
						<li>Age-Appropriate Guidelines Chart</li>
						<li>Device Configuration Worksheets</li>
						<li>Community Policy Templates</li>
						<li>Parent-Child Conversation Starters</li>
					</ul>
				</div>
			</section>
		</div>
	</main>

	<Footer />
</Layout>

<style>
	.resources-main {
		flex: 1;
		padding: var(--space-8) 0;
	}

	/* Search Section */
	.search-section {
		max-width: 600px;
		margin: 0 auto var(--space-12);
	}

	.search-box {
		display: flex;
		gap: var(--space-2);
	}

	.search-input {
		flex: 1;
		padding: var(--space-3) var(--space-4);
		border: 2px solid var(--color-gray-300);
		border-radius: var(--radius-lg);
		font-size: var(--text-base);
		font-family: var(--font-sans);
	}

	.search-input:disabled {
		background-color: var(--color-gray-100);
		cursor: not-allowed;
	}

	.search-button {
		padding: var(--space-3) var(--space-6);
		background-color: var(--color-primary-600);
		color: white;
		border: none;
		border-radius: var(--radius-lg);
		font-weight: 600;
		cursor: pointer;
	}

	.search-button:disabled {
		opacity: 0.5;
		cursor: not-allowed;
	}

	/* Quick Links */
	.quick-links-section {
		margin-bottom: var(--space-16);
	}

	.quick-links-section h2 {
		text-align: center;
		margin-bottom: var(--space-8);
	}

	.quick-links-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--space-4);
		max-width: 600px;
		margin: 0 auto;
	}

	@media (min-width: 768px) {
		.quick-links-grid {
			grid-template-columns: repeat(4, 1fr);
			max-width: 800px;
		}
	}

	.quick-link-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--space-2);
		padding: var(--space-6);
		background-color: white;
		border: 2px solid var(--color-gray-200);
		border-radius: var(--radius-xl);
		text-decoration: none;
		transition: all var(--transition-base);
	}

	.quick-link-card:hover {
		border-color: var(--color-primary-400);
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
		text-decoration: none;
	}

	.quick-link-icon {
		font-size: var(--text-4xl);
	}

	.quick-link-title {
		font-size: var(--text-sm);
		font-weight: 600;
		color: var(--color-gray-900);
		text-align: center;
	}

	/* Resource Sections */
	.resource-section {
		margin-bottom: var(--space-20);
		scroll-margin-top: var(--space-20);
	}

	.resource-section h2 {
		margin-bottom: var(--space-4);
	}

	.section-intro {
		font-size: var(--text-lg);
		color: var(--color-gray-700);
		margin-bottom: var(--space-8);
	}

	.resource-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: var(--space-6);
		margin-bottom: var(--space-6);
	}

	@media (min-width: 768px) {
		.resource-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 1024px) {
		.resource-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	/* Tools */
	.tools-category {
		margin-bottom: var(--space-12);
	}

	.tools-category h3 {
		font-size: var(--text-2xl);
		color: var(--color-primary-600);
		margin-bottom: var(--space-6);
	}

	.tools-list {
		display: grid;
		grid-template-columns: 1fr;
		gap: var(--space-6);
	}

	@media (min-width: 768px) {
		.tools-list {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	.tool-item {
		background-color: var(--color-gray-50);
		border: 1px solid var(--color-gray-200);
		border-radius: var(--radius-lg);
		padding: var(--space-6);
	}

	.tool-item h4 {
		font-size: var(--text-xl);
		color: var(--color-gray-900);
		margin-bottom: var(--space-2);
	}

	.tool-item p {
		font-size: var(--text-sm);
		color: var(--color-gray-700);
		margin-bottom: var(--space-3);
		line-height: var(--leading-relaxed);
	}

	.tool-item a {
		font-weight: 600;
		font-size: var(--text-sm);
	}

	.disclaimer {
		background-color: #fef3c7;
		border: 1px solid #fcd34d;
		border-radius: var(--radius-md);
		padding: var(--space-4);
		font-size: var(--text-sm);
		color: #78350f;
		margin-top: var(--space-8);
	}

	/* Glossary */
	.glossary-list {
		display: grid;
		grid-template-columns: 1fr;
		gap: var(--space-6);
	}

	@media (min-width: 768px) {
		.glossary-list {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	.glossary-item h4 {
		font-size: var(--text-lg);
		color: var(--color-primary-600);
		margin-bottom: var(--space-2);
	}

	.glossary-item p {
		font-size: var(--text-base);
		color: var(--color-gray-700);
		line-height: var(--leading-relaxed);
		margin-bottom: 0;
	}

	/* External Resources */
	.external-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: var(--space-6);
	}

	@media (min-width: 768px) {
		.external-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	.external-card {
		background-color: white;
		border: 2px solid var(--color-gray-200);
		border-radius: var(--radius-lg);
		padding: var(--space-6);
	}

	.external-card h4 {
		font-size: var(--text-xl);
		color: var(--color-gray-900);
		margin-bottom: var(--space-3);
	}

	.external-card p {
		font-size: var(--text-base);
		color: var(--color-gray-700);
		margin-bottom: var(--space-4);
		line-height: var(--leading-relaxed);
	}

	.external-card a {
		font-weight: 600;
	}

	/* Downloads */
	.downloads-section {
		margin-bottom: var(--space-16);
	}

	.downloads-section h2 {
		margin-bottom: var(--space-4);
	}

	.downloads-preview {
		background-color: var(--color-gray-50);
		border: 1px solid var(--color-gray-200);
		border-radius: var(--radius-lg);
		padding: var(--space-8);
		margin-top: var(--space-6);
	}

	.downloads-preview ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.downloads-preview li {
		padding: var(--space-3) 0;
		border-bottom: 1px solid var(--color-gray-200);
		color: var(--color-gray-600);
		font-size: var(--text-base);
	}

	.downloads-preview li:last-child {
		border-bottom: none;
	}

	.downloads-preview li::before {
		content: 'üìÑ';
		margin-right: var(--space-3);
	}
</style>
