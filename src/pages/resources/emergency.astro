---
import Layout from '../../layouts/PageLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Alert from '../../components/Alert.astro';

const metadata = {
  title: 'Emergency Contact Resources',
  description: 'Critical crisis hotlines, cyberbullying resources, exploitation reporting, and mental health support for immediate help.',
};
---

<Layout metadata={metadata}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
    <Breadcrumb />
  </div>

  <div class="max-w-6xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <header class="text-center mb-8">
      <div
        class="inline-block bg-gradient-to-r from-red-600 to-red-800 dark:from-red-600 dark:to-red-800 text-white px-5 py-2 rounded-full font-bold text-sm uppercase tracking-wider mb-4 animate-pulse"
      >
        üö® EMERGENCY RESOURCES
      </div>
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white mb-3">Immediate Help & Support</h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
        If you or someone you know is in crisis or needs immediate help, these resources are available 24/7.
      </p>
    </header>

    <Alert type="error">
      <strong>Life-Threatening Emergency:</strong> If you or someone else is in immediate danger, call 911 or your local
      emergency number immediately.
