---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import EmptyState from '../components/EmptyState.astro';
import Button from '../components/Button.astro';

const currentPath = Astro.url.pathname;
---

<Layout
	title="Page Not Found - Shemirat Enayim"
	description="The page you're looking for doesn't exist."
>
	<Header currentPath={currentPath} />

	<main>
		<section class="error-section">
			<div class="container">
				<EmptyState
					icon="help"
					title="Page Not Found"
					description="Sorry, we couldn't find the page you're looking for. The page may have been moved or deleted."
				>
					<div class="error-actions">
						<Button href="/" variant="primary">Go Home</Button>
						<Button href="/resources" variant="secondary">Browse Resources</Button>
					</div>
				</EmptyState>

				<div class="suggestions">
					<h2>Helpful Links</h2>
					<div class="suggestion-grid">
						<a href="/parents" class="suggestion-link">
							<strong>For Parents</strong>
							<span>Learn how to protect your children online</span>
						</a>
						<a href="/leaders" class="suggestion-link">
							<strong>For Leaders</strong>
							<span>Set up filtered networks for your community</span>
						</a>
						<a href="/individuals" class="suggestion-link">
							<strong>For Individuals</strong>
							<span>Personal filtering and accountability</span>
						</a>
						<a href="/methods" class="suggestion-link">
							<strong>Protection Methods</strong>
							<span>Browse all filtering solutions</span>
						</a>
						<a href="/faq" class="suggestion-link">
							<strong>FAQ</strong>
							<span>Common questions answered</span>
						</a>
						<a href="/troubleshooting" class="suggestion-link">
							<strong>Troubleshooting</strong>
							<span>Fix common filtering issues</span>
						</a>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.error-section {
		min-height: 60vh;
		padding: var(--space-16) 0;
	}

	.error-actions {
		display: flex;
		gap: var(--space-4);
		flex-wrap: wrap;
		justify-content: center;
		margin-top: var(--space-6);
	}

	.suggestions {
		margin-top: var(--space-16);
		text-align: center;
	}

	.suggestions h2 {
		font-size: var(--text-2xl);
		font-weight: 700;
		color: var(--color-gray-900);
		margin-bottom: var(--space-8);
	}

	.suggestion-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: var(--space-4);
		max-width: 900px;
		margin: 0 auto;
	}

	.suggestion-link {
		display: flex;
		flex-direction: column;
		gap: var(--space-2);
		padding: var(--space-6);
		background: white;
		border: 1px solid var(--color-gray-200);
		border-radius: var(--radius-lg);
		text-decoration: none;
		transition: all var(--transition-base);
	}

	.suggestion-link:hover {
		border-color: var(--color-primary-300);
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
	}

	.suggestion-link strong {
		font-size: var(--text-lg);
		color: var(--color-gray-900);
	}

	.suggestion-link span {
		font-size: var(--text-sm);
		color: var(--color-gray-600);
	}

	.suggestion-link:hover strong {
		color: var(--color-primary-600);
	}
</style>
