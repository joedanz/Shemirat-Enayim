---
/**
 * Footer Component - Shemirat Enayim
 * Tailwind CSS version with newsletter signup and link grid
 * Features: Responsive grid layout, dark background, newsletter section
 */

import NewsletterSignup from './NewsletterSignup.astro';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-300 pt-12 pb-6 mt-auto">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8">
		<!-- Newsletter Section -->
		<div class="pb-10 mb-10 border-b border-gray-800">
			<NewsletterSignup variant="footer" />
		</div>

		<!-- Footer Grid -->
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-[2fr_1fr_1fr_1fr] gap-8 mb-8">
			<!-- About Section -->
			<div>
				<h3 class="text-gray-50 text-xl mb-2">Shemirat Enayim</h3>
				<p class="text-brand-400 text-sm italic mb-3">Protection for the Eyes</p>
				<p class="text-sm leading-relaxed text-gray-400">
					Comprehensive resources for protecting your family and community from inappropriate online content.
				</p>
			</div>

			<!-- For You Section -->
			<div>
				<h4 class="text-gray-50 text-base font-semibold mb-4">For You</h4>
				<ul class="list-none p-0 m-0">
					<li class="mb-3">
						<a
							href="/parents"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							Parents
						</a>
					</li>
					<li class="mb-3">
						<a
							href="/leaders"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							Organizations
						</a>
					</li>
					<li class="mb-3">
						<a
							href="/individuals"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							Individuals
						</a>
					</li>
				</ul>
			</div>

			<!-- Resources Section -->
			<div>
				<h4 class="text-gray-50 text-base font-semibold mb-4">Resources</h4>
				<ul class="list-none p-0 m-0">
					<li class="mb-3">
						<a
							href="/methods"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							Protection Methods
						</a>
					</li>
					<li class="mb-3">
						<a
							href="/resources"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							Resource Library
						</a>
					</li>
					<li class="mb-3">
						<a
							href="/guides"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							Guides & Tutorials
						</a>
					</li>
				</ul>
			</div>

			<!-- About Section -->
			<div>
				<h4 class="text-gray-50 text-base font-semibold mb-4">About</h4>
				<ul class="list-none p-0 m-0">
					<li class="mb-3">
						<a
							href="/about"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							About Us
						</a>
					</li>
					<li class="mb-3">
						<a
							href="/contact"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							Contact
						</a>
					</li>
					<li class="mb-3">
						<a
							href="/faq"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							FAQ
						</a>
					</li>
					<li class="mb-3">
						<a
							href="/privacy"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							Privacy Policy
						</a>
					</li>
					<li class="mb-3">
						<a
							href="/terms"
							class="text-gray-300 text-sm no-underline transition-colors hover:text-brand-400 hover:no-underline"
						>
							Terms of Service
						</a>
					</li>
				</ul>
			</div>
		</div>

		<!-- Footer Bottom -->
		<div class="border-t border-gray-800 pt-6 text-center">
			<p class="text-gray-500 text-sm m-0">
				&copy; {currentYear} Shemirat Enayim. All rights reserved.
			</p>
			<p class="text-gray-600 text-xs leading-relaxed max-w-4xl mx-auto mt-4 m-0">
				Product names and trademarks are property of their respective owners. iPhone, iPad, and macOS are trademarks of Apple Inc.
				Windows and Xbox are trademarks of Microsoft Corporation. Android and Google are trademarks of Google LLC.
				PlayStation is a trademark of Sony Interactive Entertainment. Nintendo and Switch are trademarks of Nintendo.
			</p>
		</div>
	</div>
</footer>
