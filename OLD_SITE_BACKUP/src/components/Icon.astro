---
interface Props {
	name: string;
	size?: 'sm' | 'md' | 'lg' | 'xl';
	class?: string;
	'aria-label'?: string;
}

const { name, size = 'md', class: className = '', 'aria-label': ariaLabel } = Astro.props;

const sizeMap = {
	sm: '16',
	md: '20',
	lg: '24',
	xl: '32'
};

const iconSize = sizeMap[size];
---

<svg
	class:list={['icon', `icon-${size}`, className]}
	width={iconSize}
	height={iconSize}
	viewBox="0 0 24 24"
	fill="none"
	stroke="currentColor"
	stroke-width="2"
	stroke-linecap="round"
	stroke-linejoin="round"
	role={ariaLabel ? 'img' : 'presentation'}
	aria-label={ariaLabel}
>
	{/* Shield (Protection) */}
	{name === 'shield' && (
		<>
			<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
		</>
	)}

	{/* Eye (Protection for the Eyes) */}
	{name === 'eye' && (
		<>
			<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
			<circle cx="12" cy="12" r="3" />
		</>
	)}

	{/* Network/Globe (Network Protection) */}
	{name === 'network' && (
		<>
			<circle cx="12" cy="12" r="10" />
			<line x1="2" y1="12" x2="22" y2="12" />
			<path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
		</>
	)}

	{/* Router (Network Equipment) */}
	{name === 'router' && (
		<>
			<rect x="2" y="10" width="20" height="12" rx="2" />
			<line x1="6" y1="16" x2="6" y2="16" />
			<line x1="10" y1="16" x2="10" y2="16" />
			<line x1="14" y1="16" x2="14" y2="16" />
			<path d="M9 2v3M15 2v3M9 5h6" />
		</>
	)}

	{/* Device/Smartphone (Device Protection) */}
	{name === 'device' && (
		<>
			<rect x="5" y="2" width="14" height="20" rx="2" />
			<line x1="12" y1="18" x2="12" y2="18" />
		</>
	)}

	{/* Desktop (Computer) */}
	{name === 'desktop' && (
		<>
			<rect x="2" y="3" width="20" height="14" rx="2" />
			<line x1="8" y1="21" x2="16" y2="21" />
			<line x1="12" y1="17" x2="12" y2="21" />
		</>
	)}

	{/* Filter/Funnel (Filtering Software) */}
	{name === 'filter' && (
		<>
			<polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3" />
		</>
	)}

	{/* Users (Parents/Family) */}
	{name === 'users' && (
		<>
			<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
			<circle cx="9" cy="7" r="4" />
			<path d="M23 21v-2a4 4 0 0 0-3-3.87" />
			<path d="M16 3.13a4 4 0 0 1 0 7.75" />
		</>
	)}

	{/* Building (Institutions/Organizations) */}
	{name === 'building' && (
		<>
			<rect x="4" y="2" width="16" height="20" rx="2" />
			<path d="M9 22v-4h6v4M8 6h.01M16 6h.01M12 6h.01M12 10h.01M12 14h.01M16 10h.01M16 14h.01M8 10h.01M8 14h.01" />
		</>
	)}

	{/* User (Individual) */}
	{name === 'user' && (
		<>
			<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
			<circle cx="12" cy="7" r="4" />
		</>
	)}

	{/* Settings/Cog (Configuration) */}
	{name === 'settings' && (
		<>
			<circle cx="12" cy="12" r="3" />
			<path d="M12 1v6m0 6v6M5.64 5.64l4.24 4.24m6.36 0l4.24-4.24m0 12.72l-4.24-4.24m-6.36 0L5.64 18.36" />
		</>
	)}

	{/* Book (Guides/Documentation) */}
	{name === 'book' && (
		<>
			<path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20" />
			<path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z" />
		</>
	)}

	{/* Gamepad (Gaming) */}
	{name === 'gamepad' && (
		<>
			<path d="M6 12h4m2 0h4M8 14l.01.01M16 10l.01.01" />
			<path d="M17 3h4a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2h-4M7 3H3a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4M7 3v6M17 3v6M7 21a2 2 0 0 1-2-2v-4a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2H7z" />
		</>
	)}

	{/* TV (Smart TV/Streaming) */}
	{name === 'tv' && (
		<>
			<rect x="2" y="7" width="20" height="15" rx="2" />
			<polyline points="17 2 12 7 7 2" />
		</>
	)}

	{/* Clock (Screen Time) */}
	{name === 'clock' && (
		<>
			<circle cx="12" cy="12" r="10" />
			<polyline points="12 6 12 12 16 14" />
		</>
	)}

	{/* AlertTriangle (Warning/Danger) */}
	{name === 'alert' && (
		<>
			<path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
			<line x1="12" y1="9" x2="12" y2="13" />
			<line x1="12" y1="17" x2="12" y2="17" />
		</>
	)}

	{/* CheckCircle (Success/Verified) */}
	{name === 'check' && (
		<>
			<path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
			<polyline points="22 4 12 14.01 9 11.01" />
		</>
	)}

	{/* Tool/Wrench (Tools) */}
	{name === 'tool' && (
		<>
			<path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z" />
		</>
	)}

	{/* Link (External Resources) */}
	{name === 'link' && (
		<>
			<path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
			<path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
		</>
	)}

	{/* Download (Downloads) */}
	{name === 'download' && (
		<>
			<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
			<polyline points="7 10 12 15 17 10" />
			<line x1="12" y1="15" x2="12" y2="3" />
		</>
	)}

	{/* HelpCircle (FAQ/Help) */}
	{name === 'help' && (
		<>
			<circle cx="12" cy="12" r="10" />
			<path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" />
			<line x1="12" y1="17" x2="12" y2="17" />
		</>
	)}

	{/* Search (Search functionality) */}
	{name === 'search' && (
		<>
			<circle cx="11" cy="11" r="8" />
			<line x1="21" y1="21" x2="16.65" y2="16.65" />
		</>
	)}
</svg>

<style>
	.icon {
		display: inline-block;
		vertical-align: middle;
		flex-shrink: 0;
	}

	.icon-sm {
		width: 16px;
		height: 16px;
	}

	.icon-md {
		width: 20px;
		height: 20px;
	}

	.icon-lg {
		width: 24px;
		height: 24px;
	}

	.icon-xl {
		width: 32px;
		height: 32px;
	}
</style>
