---
import NewsletterSignup from './NewsletterSignup.astro';

const currentYear = new Date().getFullYear();
---

<footer>
	<div class="container">
		<div class="newsletter-section">
			<NewsletterSignup variant="footer" />
		</div>

		<div class="footer-grid">
			<div class="footer-section">
				<h3>Shemirat Enayim</h3>
				<p class="tagline">Protection for the Eyes</p>
				<p class="description">
					Comprehensive resources for protecting your family and community from inappropriate online content.
				</p>
			</div>

			<div class="footer-section">
				<h4>For You</h4>
				<ul>
					<li><a href="/parents">Parents</a></li>
					<li><a href="/leaders">Organizations</a></li>
					<li><a href="/individuals">Individuals</a></li>
				</ul>
			</div>

			<div class="footer-section">
				<h4>Resources</h4>
				<ul>
					<li><a href="/methods">Protection Methods</a></li>
					<li><a href="/resources">Resource Library</a></li>
					<li><a href="/guides">Guides & Tutorials</a></li>
				</ul>
			</div>

			<div class="footer-section">
				<h4>About</h4>
				<ul>
					<li><a href="/about">About Us</a></li>
					<li><a href="/contact">Contact</a></li>
					<li><a href="/faq">FAQ</a></li>
					<li><a href="/privacy">Privacy Policy</a></li>
					<li><a href="/terms">Terms of Service</a></li>
				</ul>
			</div>
		</div>

		<div class="footer-bottom">
			<p>&copy; {currentYear} Shemirat Enayim. All rights reserved.</p>
			<p class="trademarks">
				Product names and trademarks are property of their respective owners. iPhone, iPad, and macOS are trademarks of Apple Inc.
				Windows and Xbox are trademarks of Microsoft Corporation. Android and Google are trademarks of Google LLC.
				PlayStation is a trademark of Sony Interactive Entertainment. Nintendo and Switch are trademarks of Nintendo.
			</p>
		</div>
	</div>
</footer>

<style>
	footer {
		background-color: var(--color-gray-900);
		color: var(--color-gray-300);
		padding: var(--space-12) 0 var(--space-6);
		margin-top: auto;
	}

	.newsletter-section {
		padding-bottom: var(--space-10);
		margin-bottom: var(--space-10);
		border-bottom: 1px solid var(--color-gray-800);
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: var(--space-8);
		margin-bottom: var(--space-8);
	}

	@media (min-width: 640px) {
		.footer-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 1024px) {
		.footer-grid {
			grid-template-columns: 2fr 1fr 1fr 1fr;
		}
	}

	.footer-section h3 {
		color: var(--color-gray-50);
		font-size: var(--text-xl);
		margin-bottom: var(--space-2);
	}

	.footer-section h4 {
		color: var(--color-gray-50);
		font-size: var(--text-base);
		font-weight: 600;
		margin-bottom: var(--space-4);
	}

	.tagline {
		color: var(--color-primary-400);
		font-size: var(--text-sm);
		font-style: italic;
		margin-bottom: var(--space-3);
	}

	.description {
		font-size: var(--text-sm);
		line-height: var(--leading-relaxed);
		color: var(--color-gray-400);
	}

	.footer-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-section li {
		margin-bottom: var(--space-3);
	}

	.footer-section a {
		color: var(--color-gray-300);
		text-decoration: none;
		transition: color var(--transition-base);
		font-size: var(--text-sm);
	}

	.footer-section a:hover {
		color: var(--color-primary-400);
		text-decoration: none;
	}

	.footer-bottom {
		border-top: 1px solid var(--color-gray-800);
		padding-top: var(--space-6);
		text-align: center;
	}

	.footer-bottom p {
		color: var(--color-gray-500);
		font-size: var(--text-sm);
		margin: 0;
	}

	.footer-bottom .trademarks {
		margin-top: var(--space-4);
		font-size: var(--text-xs);
		color: var(--color-gray-600);
		line-height: var(--leading-relaxed);
		max-width: 60rem;
		margin-left: auto;
		margin-right: auto;
	}
</style>
