---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Card from '../../components/Card.astro';
import Hero from '../../components/Hero.astro';
import Alert from '../../components/Alert.astro';

const printables = [
	{
		title: 'DNS Server Quick Reference',
		description: 'Wallet-sized card with DNS server addresses for major filtering providers',
		href: '/printables/dns-servers',
		icon: 'üî¢',
		size: '3.5" x 2"'
	},
	{
		title: 'Router Admin Login Card',
		description: 'Common default router credentials and admin URLs',
		href: '/printables/router-credentials',
		icon: 'üîê',
		size: '3.5" x 2"'
	},
	{
		title: 'Age-Appropriate Screen Time Limits',
		description: 'AAP-recommended screen time by age group',
		href: '/printables/screen-time-limits',
		icon: '‚è∞',
		size: '5" x 7"'
	},
	{
		title: 'Cyberbullying Warning Signs',
		description: 'Checklist of behavioral red flags for parents',
		href: '/printables/cyberbullying-warning-signs',
		icon: '‚ö†Ô∏è',
		size: '8.5" x 11"'
	},
	{
		title: 'Safe Search Quick Enable',
		description: 'Step-by-step instructions for enabling SafeSearch on all major search engines',
		href: '/printables/safe-search-guide',
		icon: 'üîç',
		size: '8.5" x 11"'
	}
];
---

<Layout
	title="Printable Quick-Reference Cards - Shemirat Enayim"
	description="Download and print helpful reference cards for internet filtering, parental controls, and online safety."
>
	<Breadcrumb />

	<Hero
		title="Printable Quick-Reference Cards"
		subtitle="Download and print these helpful reference cards for easy access to important information."
	/>

	<div class="printables-container">
		<Alert type="info">
			<strong>Printing Tips:</strong> Use your browser's print function (Ctrl+P / Cmd+P) and select "Print to PDF" to save,
			or print directly on cardstock for best results.
		</Alert>

		<section class="printables-grid">
			{printables.map((printable) => (
				<Card
					title={printable.title}
					href={printable.href}
					class="printable-card"
				>
					<div class="card-icon">{printable.icon}</div>
					<p class="card-description">{printable.description}</p>
					<div class="card-meta">
						<span class="card-size">üìÑ {printable.size}</span>
					</div>
				</Card>
			))}
		</section>

		<section class="usage-tips">
			<h2>How to Use These Cards</h2>
			<div class="tips-grid">
				<div class="tip">
					<h3>1. Print</h3>
					<p>Click any card above, then use Ctrl+P (Cmd+P on Mac) to print. Choose "Print to PDF" to save digitally.</p>
				</div>
				<div class="tip">
					<h3>2. Cut</h3>
					<p>For wallet-sized cards (3.5" x 2"), cut along the marked borders. Consider laminating for durability.</p>
				</div>
				<div class="tip">
					<h3>3. Store</h3>
					<p>Keep cards in your wallet, attach to router, or post near computers as quick references.</p>
				</div>
			</div>
		</section>

		<section class="best-practices">
			<h2>Best Printing Practices</h2>
			<ul>
				<li><strong>Paper:</strong> Use heavyweight cardstock (110lb+) for wallet cards</li>
				<li><strong>Lamination:</strong> Laminate frequently-used cards to prevent wear</li>
				<li><strong>Color vs. B&W:</strong> All cards print clearly in black & white</li>
				<li><strong>Margins:</strong> Ensure printer margins are set to minimum for proper sizing</li>
				<li><strong>Multiple copies:</strong> Print extras to share with family members or friends</li>
			</ul>
		</section>
	</div>
</Layout>

<style>
	.printables-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--space-8) var(--space-4);
	}

	.printables-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: var(--space-6);
		margin-top: var(--space-8);
	}

	.printable-card {
		position: relative;
	}

	.card-icon {
		font-size: 3rem;
		margin-bottom: var(--space-3);
	}

	.card-description {
		color: var(--color-gray-600);
		margin-bottom: var(--space-4);
		line-height: var(--leading-relaxed);
	}

	.card-meta {
		display: flex;
		gap: var(--space-3);
		font-size: var(--text-sm);
		color: var(--color-gray-500);
		border-top: 1px solid var(--color-gray-200);
		padding-top: var(--space-3);
	}

	.card-size {
		font-weight: 500;
	}

	.usage-tips {
		margin-top: var(--space-16);
		padding: var(--space-10);
		background: linear-gradient(135deg, var(--color-primary-50) 0%, var(--color-secondary-50) 100%);
		border-radius: var(--radius-xl);
	}

	.usage-tips h2 {
		font-size: var(--text-3xl);
		font-weight: 700;
		color: var(--color-gray-900);
		margin-bottom: var(--space-6);
		text-align: center;
	}

	.tips-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: var(--space-6);
	}

	.tip {
		background: var(--color-white);
		padding: var(--space-6);
		border-radius: var(--radius-lg);
		box-shadow: var(--shadow-sm);
	}

	.tip h3 {
		font-size: var(--text-xl);
		font-weight: 600;
		color: var(--color-primary-600);
		margin-bottom: var(--space-3);
	}

	.tip p {
		color: var(--color-gray-600);
		line-height: var(--leading-relaxed);
	}

	.best-practices {
		margin-top: var(--space-12);
	}

	.best-practices h2 {
		font-size: var(--text-2xl);
		font-weight: 700;
		color: var(--color-gray-900);
		margin-bottom: var(--space-6);
	}

	.best-practices ul {
		list-style: none;
		margin-left: 0;
	}

	.best-practices li {
		padding-left: var(--space-6);
		position: relative;
		margin-bottom: var(--space-3);
		color: var(--color-gray-700);
		line-height: var(--leading-relaxed);
	}

	.best-practices li:before {
		content: '‚úì';
		position: absolute;
		left: 0;
		color: var(--color-secondary-600);
		font-weight: 700;
	}

	@media (max-width: 768px) {
		.printables-grid,
		.tips-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
