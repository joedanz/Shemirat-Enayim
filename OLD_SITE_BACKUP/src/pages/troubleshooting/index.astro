---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Card from '../../components/Card.astro';
import Hero from '../../components/Hero.astro';
import Alert from '../../components/Alert.astro';

const troubleshootingGuides = [
	{
		title: 'DNS Changes Not Taking Effect',
		description: 'Your DNS filtering isn\'t working even after changing settings. Learn how to flush caches and verify DNS propagation.',
		href: '/troubleshooting/dns-not-working',
		icon: 'üîÑ',
		difficulty: 'Beginner'
	},
	{
		title: 'Internet Slowdown After Filtering',
		description: 'Your connection feels sluggish after implementing filtering. Identify and fix performance bottlenecks.',
		href: '/troubleshooting/slow-internet',
		icon: 'üêå',
		difficulty: 'Intermediate'
	},
	{
		title: 'Legitimate Sites Being Blocked',
		description: 'Important websites are being blocked incorrectly. Learn how to whitelist sites and adjust filter sensitivity.',
		href: '/troubleshooting/sites-blocked-incorrectly',
		icon: 'üö´',
		difficulty: 'Beginner'
	},
	{
		title: 'Child Bypassed Filter',
		description: 'Discovered your child found a way around filtering. Close common bypass methods and strengthen protection.',
		href: '/troubleshooting/child-bypassed-filter',
		icon: 'üîì',
		difficulty: 'Advanced'
	},
	{
		title: 'Forgotten Admin Password',
		description: 'Lost access to router or filtering software. Recover or reset admin credentials safely.',
		href: '/troubleshooting/password-recovery',
		icon: 'üîë',
		difficulty: 'Intermediate'
	}
];
---

<Layout
	title="Troubleshooting Guides - Shemirat Enayim"
	description="Solve common internet filtering problems with our step-by-step troubleshooting guides. Fix DNS issues, performance problems, and more."
>
	<Breadcrumb />

	<Hero
		title="Troubleshooting Guides"
		subtitle="Having issues with your internet filtering? Find solutions to common problems with step-by-step troubleshooting instructions."
	/>

	<div class="troubleshooting-container">
		<Alert type="info">
			<strong>Need immediate help?</strong> If you're experiencing urgent issues, contact your filtering provider's
			support team or reach out to us via our <a href="/contact">contact form</a>.
		</Alert>

		<section class="guides-section">
			<h2>Common Issues</h2>
			<div class="guides-grid">
				{troubleshootingGuides.map((guide) => (
					<Card
						title={guide.title}
						href={guide.href}
						class="troubleshooting-card"
					>
						<div class="card-icon">{guide.icon}</div>
						<p class="card-description">{guide.description}</p>
						<span class={`difficulty-badge difficulty-${guide.difficulty.toLowerCase()}`}>
							{guide.difficulty}
						</span>
					</Card>
				))}
			</div>
		</section>

		<section class="quick-tips">
			<h2>Quick Diagnostic Tips</h2>
			<div class="tips-grid">
				<div class="tip-card">
					<h3>üîç Verify DNS Settings</h3>
					<p>Check that your DNS servers are correctly configured on both router and devices.</p>
					<code>nslookup example.com</code>
				</div>
				<div class="tip-card">
					<h3>üîÑ Restart Devices</h3>
					<p>Power cycle your router, modem, and affected devices to clear temporary issues.</p>
				</div>
				<div class="tip-card">
					<h3>üßπ Clear Browser Cache</h3>
					<p>Old cached DNS entries can interfere with filtering. Clear browser data and DNS cache.</p>
				</div>
				<div class="tip-card">
					<h3>üß™ Test Different Devices</h3>
					<p>Check if the issue occurs on multiple devices to determine if it's network-wide or device-specific.</p>
				</div>
			</div>
		</section>

		<section class="help-section">
			<h2>Still Can't Solve It?</h2>
			<p>
				If these guides don't resolve your issue, we're here to help. Check our FAQ or contact us directly.
			</p>
			<div class="help-actions">
				<a href="/faq" class="btn btn-primary">Browse FAQ</a>
				<a href="/contact" class="btn btn-secondary">Contact Support</a>
			</div>
		</section>
	</div>
</Layout>

<style>
	.troubleshooting-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--space-8) var(--space-4);
	}

	.guides-section {
		margin-top: var(--space-10);
	}

	.guides-section h2 {
		font-size: var(--text-3xl);
		font-weight: 700;
		color: var(--color-gray-900);
		margin-bottom: var(--space-6);
		text-align: center;
	}

	.guides-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: var(--space-6);
		margin-top: var(--space-8);
	}

	.troubleshooting-card {
		position: relative;
	}

	.card-icon {
		font-size: 3rem;
		margin-bottom: var(--space-3);
	}

	.card-description {
		color: var(--color-gray-600);
		margin-bottom: var(--space-4);
		line-height: var(--leading-relaxed);
	}

	.difficulty-badge {
		display: inline-block;
		padding: var(--space-1) var(--space-3);
		border-radius: var(--radius-full);
		font-size: var(--text-sm);
		font-weight: 600;
		position: absolute;
		top: var(--space-4);
		right: var(--space-4);
	}

	.difficulty-beginner {
		background-color: var(--color-secondary-100);
		color: var(--color-secondary-800);
	}

	.difficulty-intermediate {
		background-color: #fef3c7;
		color: #92400e;
	}

	.difficulty-advanced {
		background-color: #fee2e2;
		color: #7f1d1d;
	}

	.quick-tips {
		margin-top: var(--space-16);
		padding: var(--space-10);
		background: linear-gradient(135deg, var(--color-primary-50) 0%, var(--color-secondary-50) 100%);
		border-radius: var(--radius-xl);
	}

	.quick-tips h2 {
		font-size: var(--text-3xl);
		font-weight: 700;
		color: var(--color-gray-900);
		margin-bottom: var(--space-6);
		text-align: center;
	}

	.tips-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: var(--space-6);
		margin-top: var(--space-6);
	}

	.tip-card {
		background: var(--color-white);
		padding: var(--space-6);
		border-radius: var(--radius-lg);
		box-shadow: var(--shadow-sm);
	}

	.tip-card h3 {
		font-size: var(--text-lg);
		font-weight: 600;
		color: var(--color-gray-900);
		margin-bottom: var(--space-3);
	}

	.tip-card p {
		color: var(--color-gray-600);
		line-height: var(--leading-relaxed);
		margin-bottom: var(--space-2);
	}

	.tip-card code {
		display: block;
		background-color: var(--color-gray-900);
		color: var(--color-secondary-300);
		padding: var(--space-2) var(--space-3);
		border-radius: var(--radius-base);
		font-size: var(--text-sm);
		font-family: 'Courier New', monospace;
		margin-top: var(--space-3);
	}

	.help-section {
		text-align: center;
		padding: var(--space-10);
		margin-top: var(--space-16);
		background-color: var(--color-gray-50);
		border-radius: var(--radius-xl);
	}

	.help-section h2 {
		font-size: var(--text-3xl);
		font-weight: 700;
		color: var(--color-gray-900);
		margin-bottom: var(--space-3);
	}

	.help-section p {
		font-size: var(--text-lg);
		color: var(--color-gray-600);
		margin-bottom: var(--space-6);
	}

	.help-actions {
		display: flex;
		gap: var(--space-3);
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-block;
		padding: var(--space-3) var(--space-6);
		border-radius: var(--radius-lg);
		font-weight: 600;
		text-decoration: none;
		transition: all var(--transition-base);
	}

	.btn-primary {
		background-color: var(--color-primary-600);
		color: var(--color-white);
	}

	.btn-primary:hover {
		background-color: var(--color-primary-700);
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
	}

	.btn-secondary {
		background-color: var(--color-white);
		color: var(--color-primary-600);
		border: 2px solid var(--color-primary-600);
	}

	.btn-secondary:hover {
		background-color: var(--color-primary-50);
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
	}

	@media (max-width: 768px) {
		.guides-grid,
		.tips-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
