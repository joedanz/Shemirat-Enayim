---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Alert from '../../components/Alert.astro';
---

<Layout
	title="Emergency Contact Resources - Shemirat Enayim"
	description="Critical crisis hotlines, cyberbullying resources, exploitation reporting, and mental health support for immediate help."
>
	<Breadcrumb />

	<div class="emergency-container">
		<header class="emergency-header">
			<div class="emergency-badge">üö® EMERGENCY RESOURCES</div>
			<h1>Immediate Help & Support</h1>
			<p class="subtitle">
				If you or someone you know is in crisis or needs immediate help, these resources are available 24/7.
			</p>
		</header>

		<Alert type="error">
			<strong>Life-Threatening Emergency:</strong> If you or someone else is in immediate danger, call 911 or your local emergency number immediately.
		</Alert>

		<section class="crisis-section">
			<h2>üÜò Crisis Hotlines</h2>
			<p class="section-intro">
				Free, confidential support available 24/7. You don't have to face a crisis alone.
			</p>

			<div class="resources-grid">
				<div class="resource-card urgent">
					<h3>National Suicide Prevention Lifeline</h3>
					<div class="contact-methods">
						<a href="tel:988" class="contact-phone">Call: 988</a>
						<a href="sms:988" class="contact-text">Text: 988</a>
						<a href="https://988lifeline.org/chat" target="_blank" class="contact-web">Chat: 988lifeline.org</a>
					</div>
					<p class="resource-description">
						24/7 crisis support for suicide prevention and mental health emergencies. Confidential and free.
					</p>
					<div class="resource-languages">Available in English & Spanish</div>
				</div>

				<div class="resource-card urgent">
					<h3>Crisis Text Line</h3>
					<div class="contact-methods">
						<a href="sms:741741" class="contact-text">Text HOME to 741741</a>
					</div>
					<p class="resource-description">
						24/7 crisis support via text message. Connect with a trained crisis counselor in minutes.
					</p>
					<div class="resource-languages">Available in English & Spanish (text HOLA to 741741)</div>
				</div>

				<div class="resource-card">
					<h3>SAMHSA National Helpline</h3>
					<div class="contact-methods">
						<a href="tel:1-800-662-4357" class="contact-phone">1-800-662-HELP (4357)</a>
					</div>
					<p class="resource-description">
						Substance Abuse and Mental Health Services Administration. 24/7 treatment referral and information service.
					</p>
				</div>

				<div class="resource-card">
					<h3>Teen Line</h3>
					<div class="contact-methods">
						<a href="tel:1-800-852-8336" class="contact-phone">1-800-TLC-TEEN (1-800-852-8336)</a>
						<a href="sms:839863" class="contact-text">Text TEEN to 839863</a>
					</div>
					<p class="resource-description">
						Teens helping teens. Call 6pm-10pm PT or text anytime. Operated by teen volunteers under adult supervision.
					</p>
				</div>

				<div class="resource-card">
					<h3>The Trevor Project (LGBTQ+ Youth)</h3>
					<div class="contact-methods">
						<a href="tel:1-866-488-7386" class="contact-phone">1-866-488-7386</a>
						<a href="sms:678678" class="contact-text">Text START to 678678</a>
						<a href="https://www.thetrevorproject.org/get-help" target="_blank" class="contact-web">Chat: thetrevorproject.org</a>
					</div>
					<p class="resource-description">
						Crisis intervention and suicide prevention services for LGBTQ+ young people under 25.
					</p>
				</div>

				<div class="resource-card">
					<h3>Veterans Crisis Line</h3>
					<div class="contact-methods">
						<a href="tel:988" class="contact-phone">Call: 988, Press 1</a>
						<a href="sms:838255" class="contact-text">Text: 838255</a>
						<a href="https://www.veteranscrisisline.net/get-help-now/chat" target="_blank" class="contact-web">Chat: veteranscrisisline.net</a>
					</div>
					<p class="resource-description">
						24/7 confidential support for veterans, service members, National Guard, Reserve, and their families.
					</p>
				</div>
			</div>
		</section>

		<section class="cyberbullying-section">
			<h2>üõ°Ô∏è Cyberbullying & Online Harassment</h2>
			<p class="section-intro">
				Resources for victims of online bullying, harassment, or threats.
			</p>

			<div class="resources-grid">
				<div class="resource-card">
					<h3>StopBullying.gov</h3>
					<div class="contact-methods">
						<a href="https://www.stopbullying.gov" target="_blank" class="contact-web">stopbullying.gov</a>
					</div>
					<p class="resource-description">
						Federal government resource with information on preventing and responding to bullying, including cyberbullying.
					</p>
				</div>

				<div class="resource-card">
					<h3>Cyberbullying Research Center</h3>
					<div class="contact-methods">
						<a href="https://cyberbullying.org" target="_blank" class="contact-web">cyberbullying.org</a>
					</div>
					<p class="resource-description">
						Research, resources, and tools for parents, educators, and teens dealing with cyberbullying.
					</p>
				</div>

				<div class="resource-card">
					<h3>PACER's National Bullying Prevention Center</h3>
					<div class="contact-methods">
						<a href="tel:1-888-248-0822" class="contact-phone">1-888-248-0822</a>
						<a href="https://www.pacer.org/bullying" target="_blank" class="contact-web">pacer.org/bullying</a>
					</div>
					<p class="resource-description">
						Resources, toolkits, and support for students, parents, and educators addressing bullying.
					</p>
				</div>

				<div class="resource-card">
					<h3>Cyber Civil Rights Initiative</h3>
					<div class="contact-methods">
						<a href="https://cybercivilrights.org" target="_blank" class="contact-web">cybercivilrights.org</a>
					</div>
					<p class="resource-description">
						24/7 crisis helpline for victims of nonconsensual pornography (revenge porn) and online harassment.
					</p>
				</div>
			</div>
		</section>

		<section class="exploitation-section">
			<h2>üöî Reporting Exploitation & Illegal Content</h2>
			<p class="section-intro">
				Report child exploitation, trafficking, or illegal online content to law enforcement.
			</p>

			<Alert type="warning">
				<strong>Important:</strong> Do not confront suspected predators yourself. Report to authorities immediately.
			</Alert>

			<div class="resources-grid">
				<div class="resource-card urgent">
					<h3>National Center for Missing & Exploited Children</h3>
					<div class="contact-methods">
						<a href="tel:1-800-843-5678" class="contact-phone">1-800-THE-LOST (1-800-843-5678)</a>
						<a href="https://www.cybertipline.org" target="_blank" class="contact-web">Report Online: CyberTipline.org</a>
					</div>
					<p class="resource-description">
						Report child sexual exploitation, online enticement, child sex trafficking. CyberTipline reports go directly to law enforcement.
					</p>
				</div>

				<div class="resource-card">
					<h3>FBI Internet Crime Complaint Center (IC3)</h3>
					<div class="contact-methods">
						<a href="https://www.ic3.gov" target="_blank" class="contact-web">ic3.gov</a>
					</div>
					<p class="resource-description">
						Report internet crimes including online predators, sextortion, and cyber threats.
					</p>
				</div>

				<div class="resource-card">
					<h3>FBI Tips</h3>
					<div class="contact-methods">
						<a href="tel:1-800-225-5324" class="contact-phone">1-800-CALL-FBI (1-800-225-5324)</a>
						<a href="https://tips.fbi.gov" target="_blank" class="contact-web">tips.fbi.gov</a>
					</div>
					<p class="resource-description">
						Report threats, crimes, or suspicious activity to the FBI.
					</p>
				</div>

				<div class="resource-card">
					<h3>National Human Trafficking Hotline</h3>
					<div class="contact-methods">
						<a href="tel:1-888-373-7888" class="contact-phone">1-888-373-7888</a>
						<a href="sms:233733" class="contact-text">Text: 233733 (BEFREE)</a>
					</div>
					<p class="resource-description">
						24/7 confidential hotline to report human trafficking and connect victims with services.
					</p>
				</div>
			</div>
		</section>

		<section class="mental-health-section">
			<h2>üß† Mental Health Support</h2>
			<p class="section-intro">
				Professional mental health resources for anxiety, depression, and other concerns.
			</p>

			<div class="resources-grid">
				<div class="resource-card">
					<h3>NAMI (National Alliance on Mental Illness)</h3>
					<div class="contact-methods">
						<a href="tel:1-800-950-6264" class="contact-phone">1-800-950-NAMI (6264)</a>
						<a href="sms:62640" class="contact-text">Text NAMI to 62640</a>
						<a href="https://www.nami.org" target="_blank" class="contact-web">nami.org</a>
					</div>
					<p class="resource-description">
						Information, resources, and support for mental health conditions. Monday-Friday, 10am-10pm ET.
					</p>
				</div>

				<div class="resource-card">
					<h3>Psychology Today Therapist Finder</h3>
					<div class="contact-methods">
						<a href="https://www.psychologytoday.com/us/therapists" target="_blank" class="contact-web">psychologytoday.com/us/therapists</a>
					</div>
					<p class="resource-description">
						Search for therapists, psychiatrists, and treatment centers by location and specialty, including technology/internet addiction specialists.
					</p>
				</div>

				<div class="resource-card">
					<h3>SMART Recovery</h3>
					<div class="contact-methods">
						<a href="https://www.smartrecovery.org" target="_blank" class="contact-web">smartrecovery.org</a>
					</div>
					<p class="resource-description">
						Science-based addiction recovery support, including online meetings for technology/internet addiction.
					</p>
				</div>

				<div class="resource-card">
					<h3>Internet & Tech Addiction Anonymous (ITAA)</h3>
					<div class="contact-methods">
						<a href="https://internetaddictsanonymous.org" target="_blank" class="contact-web">internetaddictsanonymous.org</a>
					</div>
					<p class="resource-description">
						12-step fellowship for those recovering from internet and technology addiction. Free online and in-person meetings.
					</p>
				</div>
			</div>
		</section>

		<section class="platform-reporting-section">
			<h2>üì± Platform-Specific Abuse Reporting</h2>
			<p class="section-intro">
				Report abuse, harassment, or inappropriate content directly to social media platforms.
			</p>

			<div class="platform-grid">
				<div class="platform-card">
					<h3>Facebook/Instagram</h3>
					<a href="https://www.facebook.com/help/181495968648557" target="_blank">Report Abuse ‚Üí</a>
				</div>
				<div class="platform-card">
					<h3>Twitter/X</h3>
					<a href="https://help.twitter.com/en/safety-and-security/report-abusive-behavior" target="_blank">Report Abuse ‚Üí</a>
				</div>
				<div class="platform-card">
					<h3>TikTok</h3>
					<a href="https://support.tiktok.com/en/safety-hc/report-a-problem" target="_blank">Report Abuse ‚Üí</a>
				</div>
				<div class="platform-card">
					<h3>Snapchat</h3>
					<a href="https://support.snapchat.com/en-US/i-need-help" target="_blank">Report Abuse ‚Üí</a>
				</div>
				<div class="platform-card">
					<h3>YouTube</h3>
					<a href="https://support.google.com/youtube/answer/2802027" target="_blank">Report Abuse ‚Üí</a>
				</div>
				<div class="platform-card">
					<h3>Discord</h3>
					<a href="https://support.discord.com/hc/en-us/articles/360000291932" target="_blank">Report Abuse ‚Üí</a>
				</div>
				<div class="platform-card">
					<h3>Twitch</h3>
					<a href="https://safety.twitch.tv" target="_blank">Report Abuse ‚Üí</a>
				</div>
				<div class="platform-card">
					<h3>Reddit</h3>
					<a href="https://www.reddit.com/report" target="_blank">Report Abuse ‚Üí</a>
				</div>
			</div>
		</section>

		<section class="international-section">
			<h2>üåç International Resources</h2>
			<p class="section-intro">
				Crisis support resources for countries outside the United States.
			</p>

			<div class="resources-grid">
				<div class="resource-card">
					<h3>Canada</h3>
					<ul class="international-list">
						<li><strong>Crisis Services Canada:</strong> <a href="tel:1-833-456-4566">1-833-456-4566</a></li>
						<li><strong>Kids Help Phone:</strong> <a href="tel:1-800-668-6868">1-800-668-6868</a> or text CONNECT to 686868</li>
						<li><strong>Cybertip.ca:</strong> <a href="https://www.cybertip.ca" target="_blank">cybertip.ca</a> (report child exploitation)</li>
					</ul>
				</div>

				<div class="resource-card">
					<h3>United Kingdom</h3>
					<ul class="international-list">
						<li><strong>Samaritans:</strong> 116 123</li>
						<li><strong>Childline:</strong> 0800 1111</li>
						<li><strong>CEOP:</strong> <a href="https://www.ceop.police.uk/Safety-Centre" target="_blank">ceop.police.uk</a> (child exploitation)</li>
					</ul>
				</div>

				<div class="resource-card">
					<h3>Australia</h3>
					<ul class="international-list">
						<li><strong>Lifeline:</strong> 13 11 14</li>
						<li><strong>Kids Helpline:</strong> 1800 55 1800</li>
						<li><strong>eSafety Commissioner:</strong> <a href="https://www.esafety.gov.au" target="_blank">esafety.gov.au</a></li>
					</ul>
				</div>

				<div class="resource-card">
					<h3>Israel</h3>
					<ul class="international-list">
						<li><strong>ERAN (Emotional First Aid):</strong> 1201</li>
						<li><strong>SAHAR (24/7 hotline):</strong> *2-6-2-6</li>
						<li><strong>Israel Police Cyber Unit:</strong> <a href="https://www.gov.il/en/Departments/Units/lahav_433_cyber_unit" target="_blank">Report Cyber Crimes</a></li>
					</ul>
				</div>
			</div>
		</section>

		<section class="documentation-section">
			<h2>üìù Documenting Incidents</h2>
			<p>If you're experiencing cyberbullying, harassment, or online threats:</p>
			<ul class="documentation-list">
				<li><strong>Screenshot everything:</strong> Capture messages, posts, profiles, URLs with timestamps</li>
				<li><strong>Don't delete:</strong> Keep records even if content is disturbing</li>
				<li><strong>Record details:</strong> Date, time, platform, usernames, what happened</li>
				<li><strong>Report first, block second:</strong> Block after reporting to preserve evidence</li>
				<li><strong>Tell a trusted adult:</strong> Don't handle serious situations alone</li>
			</ul>
			<p>See our <a href="/guides/cyberbullying">complete cyberbullying response guide</a> for detailed documentation instructions.</p>
		</section>

		<section class="help-section">
			<h2>üíô You're Not Alone</h2>
			<p class="help-message">
				Whether you're dealing with a crisis, online harassment, mental health concerns, or just need someone to talk to,
				help is available. These resources are confidential, free, and staffed by trained professionals who care.
			</p>
			<p class="help-message">
				<strong>It's okay to ask for help.</strong> Reaching out is a sign of strength, not weakness.
			</p>
		</section>
	</div>
</Layout>

<style>
	.emergency-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--space-8) var(--space-4);
	}

	.emergency-header {
		text-align: center;
		margin-bottom: var(--space-8);
	}

	.emergency-badge {
		display: inline-block;
		background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
		color: white;
		padding: var(--space-2) var(--space-5);
		border-radius: var(--radius-full);
		font-weight: 700;
		font-size: var(--text-sm);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-bottom: var(--space-4);
		animation: pulse 2s infinite;
	}

	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.8; }
	}

	.emergency-header h1 {
		font-size: var(--text-4xl);
		font-weight: 800;
		color: var(--color-gray-900);
		margin-bottom: var(--space-3);
	}

	.subtitle {
		font-size: var(--text-xl);
		color: var(--color-gray-600);
		line-height: var(--leading-relaxed);
	}

	.crisis-section,
	.cyberbullying-section,
	.exploitation-section,
	.mental-health-section,
	.platform-reporting-section,
	.international-section {
		margin-top: var(--space-12);
	}

	section h2 {
		font-size: var(--text-3xl);
		font-weight: 700;
		color: var(--color-gray-900);
		margin-bottom: var(--space-3);
	}

	.section-intro {
		font-size: var(--text-lg);
		color: var(--color-gray-600);
		margin-bottom: var(--space-6);
		line-height: var(--leading-relaxed);
	}

	.resources-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: var(--space-6);
	}

	.resource-card {
		background: white;
		border: 2px solid var(--color-gray-200);
		border-radius: var(--radius-xl);
		padding: var(--space-6);
		transition: all var(--transition-base);
	}

	.resource-card:hover {
		border-color: var(--color-primary-500);
		box-shadow: var(--shadow-xl);
		transform: translateY(-2px);
	}

	.resource-card.urgent {
		border-color: var(--color-error);
		background: linear-gradient(135deg, #fef2f2 0%, #ffffff 100%);
	}

	.resource-card h3 {
		font-size: var(--text-xl);
		font-weight: 700;
		color: var(--color-gray-900);
		margin: 0 0 var(--space-4) 0;
	}

	.contact-methods {
		display: flex;
		flex-direction: column;
		gap: var(--space-2);
		margin-bottom: var(--space-4);
	}

	.contact-phone,
	.contact-text,
	.contact-web {
		display: inline-block;
		padding: var(--space-3) var(--space-4);
		background-color: var(--color-primary-600);
		color: white;
		text-decoration: none;
		border-radius: var(--radius-lg);
		font-weight: 600;
		text-align: center;
		transition: all var(--transition-base);
	}

	.contact-phone:hover,
	.contact-text:hover,
	.contact-web:hover {
		background-color: var(--color-primary-700);
		transform: scale(1.02);
		text-decoration: none;
	}

	.resource-description {
		color: var(--color-gray-700);
		line-height: var(--leading-relaxed);
		margin-bottom: var(--space-3);
	}

	.resource-languages {
		font-size: var(--text-sm);
		color: var(--color-gray-500);
		font-style: italic;
	}

	.platform-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
		gap: var(--space-4);
	}

	.platform-card {
		background: var(--color-gray-50);
		border: 1px solid var(--color-gray-200);
		border-radius: var(--radius-lg);
		padding: var(--space-5);
		text-align: center;
		transition: all var(--transition-base);
	}

	.platform-card:hover {
		background: white;
		border-color: var(--color-primary-500);
		box-shadow: var(--shadow-lg);
	}

	.platform-card h3 {
		font-size: var(--text-base);
		font-weight: 600;
		color: var(--color-gray-900);
		margin: 0 0 var(--space-3) 0;
	}

	.platform-card a {
		color: var(--color-primary-600);
		text-decoration: none;
		font-weight: 500;
	}

	.platform-card a:hover {
		text-decoration: underline;
	}

	.international-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.international-list li {
		margin-bottom: var(--space-2);
		color: var(--color-gray-700);
	}

	.international-list a {
		color: var(--color-primary-600);
		text-decoration: none;
	}

	.international-list a:hover {
		text-decoration: underline;
	}

	.documentation-section {
		background: var(--color-secondary-50);
		padding: var(--space-8);
		border-radius: var(--radius-xl);
		margin-top: var(--space-12);
	}

	.documentation-list {
		margin: var(--space-4) 0;
		padding-left: var(--space-8);
	}

	.documentation-list li {
		margin-bottom: var(--space-3);
		color: var(--color-gray-700);
		line-height: var(--leading-relaxed);
	}

	.help-section {
		text-align: center;
		background: linear-gradient(135deg, var(--color-primary-50) 0%, var(--color-secondary-50) 100%);
		padding: var(--space-10);
		border-radius: var(--radius-xl);
		margin-top: var(--space-12);
	}

	.help-section h2 {
		margin-bottom: var(--space-4);
	}

	.help-message {
		font-size: var(--text-lg);
		color: var(--color-gray-700);
		line-height: var(--leading-relaxed);
		margin-bottom: var(--space-4);
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}

	@media (max-width: 768px) {
		.emergency-header h1 {
			font-size: var(--text-3xl);
		}

		.resources-grid {
			grid-template-columns: 1fr;
		}

		.platform-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
